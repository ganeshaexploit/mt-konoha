-- ⚡ Brutal Teleport Multi-Point by Ganesha Exploit ⚡
-- ✅ Brutal CFrame (instan + anti mantul)
-- ✅ Delay antar checkpoint
-- ✅ Auto lanjut checkpoint terakhir saat respawn
-- ✅ Auto reset 1s setelah checkpoint terakhir (loop ulang)
-- ✅ Toggle ON/OFF dengan UI modern
-- ✅ UI tidak hilang saat respawn

--=== Services ===--
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer
local RunService = game:GetService("RunService")

--=== Checkpoints (CFrame) ===--
local checkpoints = {
    CFrame.new(813.32,285.00,-576.73),
    CFrame.new(770.99,516.98,-379.52),
    CFrame.new(-79.29,473.00,386.61),
    CFrame.new(179.59,581.00,701.10),
    CFrame.new(348.56,584.72,820.30),
    CFrame.new(793.17,809.00,625.78),
    CFrame.new(915.12,997.73,584.24),
}

--=== Settings ===--
local delayTime = 60 -- detik
local lastCheckpoint = 1
local teleportEnabled = false -- toggle ON/OFF

--=== Notifikasi Roblox ===--
local function Notify(msg)
    pcall(function()
        StarterGui:SetCore("SendNotification", {
            Title = "⚡ Auto Summit by Ganesha Exploit",
            Text = msg,
            Duration = 3
        })
    end)
end

--=== Teleport Loop ===--
local function teleportLoop()
    while teleportEnabled do
        local char = player.Character or player.CharacterAdded:Wait()
        local hrp = char:WaitForChild("HumanoidRootPart")
        local hum = char:WaitForChild("Humanoid")

        for i = lastCheckpoint, #checkpoints do
            if not teleportEnabled then return end -- stop jika toggle off
            hrp.CFrame = checkpoints[i]
            lastCheckpoint = i
            if i < #checkpoints then
                task.wait(delayTime)
            end
        end

        -- selesai semua checkpoint
        if lastCheckpoint == #checkpoints then
            Notify("Auto Reset dalam 1s...")
            task.wait(1)
            hum.Health = 0 -- reset natural
            lastCheckpoint = 1
        end
    end
end

--=== UI Modern Sederhana ===--
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AutoSummitUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,200,0,100)
frame.Position = UDim2.new(0,10,0,10)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(1, -20, 0, 50)
toggleButton.Position = UDim2.new(0,10,0,10)
toggleButton.BackgroundColor3 = Color3.fromRGB(50,50,50)
toggleButton.TextColor3 = Color3.fromRGB(255,255,255)
toggleButton.Text = "Teleport OFF"
toggleButton.Parent = frame

toggleButton.MouseButton1Click:Connect(function()
    teleportEnabled = not teleportEnabled
    toggleButton.Text = teleportEnabled and "Teleport ON" or "Teleport OFF"
    if teleportEnabled then
        Notify("✅ Teleport Dimulai!")
        task.spawn(teleportLoop)
    else
        Notify("❌ Teleport Dihentikan!")
    end
end)

--=== Auto lanjut saat respawn ===--
player.CharacterAdded:Connect(function()
    task.wait(1)
    if teleportEnabled then
        task.spawn(teleportLoop)
    end
end)

--=== Script Loaded ===--
Notify("✅ Script Loaded! Gunakan UI untuk toggle Teleport.")
